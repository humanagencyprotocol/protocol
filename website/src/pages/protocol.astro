---
import { getEntry } from 'astro:content';
import ContentLayout from '../layouts/ContentLayout.astro';

const entry = await getEntry('docs', 'protocol');
const { Content } = await entry.render();
---

<ContentLayout
    title={entry.data.title}
    version={entry.data.version}
    date={entry.data.date}
    nextPage={{ url: '/deploy-gate-profile', label: 'Deploy Gate Profile' }}
>
    <div class="review-callout">
        <strong>What's next:</strong> The <a href="/review">v0.3 Proposal</a> covers multi-domain ownership, role-scoped disclosure, and gate content verifiability.
    </div>
    <Content />
</ContentLayout>

<style>
    .review-callout {
        background: var(--bg-elevated);
        border: 1px solid var(--border);
        border-left: 3px solid var(--accent);
        padding: 1rem 1.25rem;
        margin-bottom: 2rem;
        border-radius: 4px;
        font-size: 0.95rem;
    }

    .review-callout a {
        color: var(--accent);
        font-weight: 500;
    }
</style>
