        background: var(--bg-elevated);
        border: 2px solid var(--border);
        border-radius: 1rem;
        padding: 2rem;
    }

    /* Compliance Section */
    .compliance-section {
        max-width: 1200px;
        margin: 8rem auto;
        padding: 0 1.5rem;
    }

